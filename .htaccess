# Активируем модуль перезаписи URL
RewriteEngine On

# --------------------------------------------------------
# ПРАВИЛА ИГНОРИРОВАНИЯ СУЩЕСТВУЮЩИХ ФАЙЛОВ И ДИРЕКТОРИЙ
# --------------------------------------------------------

# Если запрашиваемый ресурс является реальным файлом,
# то прекращаем перезапись (сервер отдает его напрямую)
RewriteCond %{REQUEST_FILENAME} !-f

# Если запрашиваемый ресурс является реальной директорией,
# то прекращаем перезапись
RewriteCond %{REQUEST_FILENAME} !-d

# --------------------------------------------------------
# ПРАВИЛО ПЕРЕНАПРАВЛЕНИЯ
# --------------------------------------------------------

# Перенаправляем все остальные запросы на index.php
# [L] - последнее правило
RewriteRule ^(.*)$ index.php [L]